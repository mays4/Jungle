<div class="row">
  <div class="form-outline mb-4">
  <div  class="jumbotron text-center">
    <h1>Login</h1>
      <%= form_tag '/login' do %>
        <div class="form-group">
          Email:
        </div>
        <div class="form-group">
          <%=text_field_tag  :email %>
        </div>
        <div class="form-group">
        Password:
      </div>
        <div class="form-group">
          <%= password_field_tag :password %>
        </div>
        <div>
          <%= submit_tag "Submit" %>
          </div>
      <% end %>
    </div>
  </div>
</div>